<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activity.DetailActivity"
    tools:showIn="@layout/activity_detail">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="3dp"
        android:elevation="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layout"
            android:background="#ebebe0">

            <TextView
                android:id="@+id/vertical_list_photosession_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="photosession details"
                android:textColor="#000"
                android:layout_marginBottom="1dp"
                android:textSize="15sp"
                android:layout_marginLeft="15dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/vertical_list_photosession_details2"
                android:textColor="#000"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="15dp"
                android:layout_below="@+id/vertical_list_photosession_details"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="15dp"/>

            <android.support.v7.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/horizontal_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vertical_list_photosession_details2"
                android:background="#FFF" />


        </RelativeLayout>



    </android.support.v7.widget.CardView>




</RelativeLayout>